    <div class="medium-9 cell">
      
      <% if params[:categoria] == nil %>
        <div class="grid-x grid-margin-x">
          <div class="medium-4 cell">
            <%= link_to productes_path(categoria: 21) do %>
              <div class="container-categoria-inici">
                <h4>Productes amb DAPcons</h4>
              </div>
            <% end %>
          </div>
          <div class="medium-4 cell">
            <%= link_to productes_path(categoria: 12) do %>
              <div class="container-categoria-inici">
                <h4>Empreses productores d'Ã rids reciclats</h4>
              </div>
            <% end %>
          </div>
          <div class="medium-4 cell">
            <%= link_to productes_path(categoria: 13) do %>
              <div class="container-categoria-inici">
                <h4>Empreses productores de fusta reciclada</h4>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% @seleccio_productes.each do |producte| %>
        <div class="producte-container">
          <div class="producte-nom">
            <span class="titol-producte-item"><%= producte.nom_ca %></span>
          </div>
          <div class="imatge-producte">
            <% if producte.imatge_producte.attached? %>
              <div class="card-image">
                <%= image_tag producte.imatge_producte.variant(resize: "250x250"), class: 'imatge-producte-item' %>
              </div>
            <% end %>
          </div>
          <div class="text-producte">
            <div class="tipus-producte-container">
              <span class="text-tip"><%= t('.tipus_producte') %>:</span><br/>
              <span class="tipus-producte"><%= producte.descripcio_ca %></span>
            </div>
            <div class="empresa-producte-container">
              <span class="text-tip"><%= t('.empresa') %>:</span><br/>
              <span class="empresa-producte"><%= producte.empresa.nom %></span>
            </div>
            <div class="destacats-container">
              <span class="text-tip"><%= t('.destaquem') %>:</span>
              <p><%= producte.destacats_ca %></p>
            </div>
            <% if can? :update, producte %>
              <div class="edicio-producte-container">
                <%= link_to 'Editar', edit_producte_path(producte) %> | <%= link_to 'Eliminar', producte, method: :delete, data: { confirm: 'Segur que vols eliminar?' } %>
              </div>
            <% end %>

          </div>
        </div>
      <% end %>
    </div>
  </div>
