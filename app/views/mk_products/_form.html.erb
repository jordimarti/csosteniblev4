
<%= simple_form_for(@mk_product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :nom %>
    <%= f.input :descripcio %>
    <%= f.input :categoria %>
    <%= f.input :adreca %>
    <%= f.input :codi_postal %>
    <%= f.input :municipi %>
    <%= f.input :latitud %>
    <%= f.input :longitud %>
    <%= f.input :preu %>
    <%= f.input :visible %>
    <%= f.input :venut %>
    <%= f.input :aprovat %>
    <%= f.input :pes %>
    <%= f.input :unitats %>
    <%= f.input :enviament %>
    <%= f.input :adreca_oculta %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
