
<%= simple_form_for(@mk_categoria) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :valida %>
    <%= f.input :nom_ca %>
    <%= f.input :nom_es %>
    <%= f.input :nom_en %>
    <%= f.input :pare %>
    <%= f.input :unitats %>
    <%= f.input :ordre %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
