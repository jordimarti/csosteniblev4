
<%= simple_form_for(@empresa) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.input :adreca %>
    <%= f.input :codi_postal %>
    <%= f.input :poblacio %>
    <%= f.input :telefon %>
    <%= f.input :email %>
    <%= f.input :web %>
    <%= f.input :altres %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
