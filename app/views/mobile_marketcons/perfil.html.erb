<div class="grid-x grid-margin-x">
	<div class="small-12 cell">
		<%= simple_form_for(@mk_user) do |f| %>
		  <%= f.error_notification %>
		  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

		  <div class="form-inputs">

		  	<%= f.input :mobile, as: :hidden, input_html: { value: true } %>

		  	<div class="grid-x grid-margin-x">
	  			<div class="medium-12 cell">
	  				<div class="mk-mobile-imatge-perfil-container">
		  				<% if @mk_user.mk_image_user.attached? %>
		  					<%= image_tag @mk_user.mk_image_user, class: "mk-imatge-perfil" %>
		  				<% else %>
		  					<%= image_tag "https://dcyqocdz7x3wj.cloudfront.net/imatges/default_user.png", class: 'mk-imatge-perfil-producte' %>
		  				<% end %>
		  			</div>
		  			<div class="mk-text-perfil-container">
		  				<span class="nom-imatge-perfil"><%= @mk_user.nom %> <%= @mk_user.cognoms %></span>
		  				<br/>
		  				<span class="municipi-imatge-perfil"><%= @mk_user.municipi %></span>
		  			</div>
	  				<%= f.input :mk_image_user, as: :file %>
	  			</div>
	  		</div>
	  		<div class="grid-x grid-margin-x">
	  			<div class="medium-6 cell">
	  				<%= f.input :nom, label_html: {class: 'mk-mobile-input'} %>
	  			</div>
	  			<div class="medium-6 cell">
	  				<%= f.input :cognoms, label_html: {class: 'mk-mobile-input'} %>
	  			</div>
	  		</div>
	  		<div class="grid-x grid-margin-x">
	  			<div class="medium-6 cell">
	  				<%= f.input :adreca, label_html: {class: 'mk-mobile-input'} %>
	  			</div>
	  			<div class="medium-2 cell">
	  				<%= f.input :codi_postal, label_html: {class: 'mk-mobile-input'} %>
	  			</div>
	  			<div class="medium-4 cell">
	  				<%= f.input :municipi, label_html: {class: 'mk-mobile-input'} %>
	  			</div>
	  		</div>	    
		  </div>

		  <div class="form-actions">
		    <div class="container">
	        <div class="grid-x grid-margin-x">
	          <div class="small-12 cell">
	          	<div class="mk-mobile-button-right">
	            	<%= f.button :submit, t('.guardar'), class:'mk-mobile-button' %>
	            </div>
	          </div>
	        </div>
       	</div>
		  </div>
		<% end %>

  </div>
</div>