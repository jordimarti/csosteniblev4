<div class="nested-fields">
	<div class="grid-x grid-margin-x">
		<div class="medium-12 cell">
			<hr/>
			<div class="grid-x grid-margin-x">
				<% if f.object.mk_product_imatge.attached? %>
					<div class="medium-3 cell">
						<%= image_tag f.object.mk_product_imatge.variant(combine_options: {resize: '300x300^', extent: '300x300', gravity: 'Center', auto_orient: true}), class: "mk-mobile-imatges-edicio" %>
					</div>
					<div class="medium-7 cell">
						<%= f.input :descripcio %>
						
					</div>
				<% else %>
					<div class="medium-5 cell">
						<%= f.input :descripcio %>
					</div>
					<div class="medium-5 cell">
						<%= f.input :mk_product_imatge, as: :file %>
					</div>
				<% end %>
				<div class="medium-2 cell">
					<div class="eliminar-document">
						<%= link_to_remove_association "Eliminar", f %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>