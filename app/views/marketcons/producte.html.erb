<div class="container">
  <%= render "layouts/marketcons_navigation" %>

  	<div class="medium-9 cell">
  		<div class="grid-x grid-margin-x">
  			<div class="medium-4 cell">
  				<%= image_tag('https://contentgrid.homedepot-static.com/hdus/en_US/DTCCOMNEW/fetch/Category_Pages/Doors_and_Windows/Doors/Exterior_Doors/ExtDrs18-VisNav-Material-fiberglass-life.jpg', :class => 'mk-image-principal') %>
  				<div class="grid-x grid-margin-x">
  					<div class="medium-4 cell">
  						<%= image_tag('https://contentgrid.homedepot-static.com/hdus/en_US/DTCCOMNEW/fetch/Category_Pages/Doors_and_Windows/Doors/Exterior_Doors/ExtDrs18-VisNav-Material-fiberglass-life.jpg', :class => 'mk-image-secundaria') %>
  					</div>
  					<div class="medium-4 cell">
  						<%= image_tag('https://contentgrid.homedepot-static.com/hdus/en_US/DTCCOMNEW/fetch/Category_Pages/Doors_and_Windows/Doors/Exterior_Doors/ExtDrs18-VisNav-Material-fiberglass-life.jpg', :class => 'mk-image-secundaria') %>
  					</div>
  					<div class="medium-4 cell">
  						<%= image_tag('https://contentgrid.homedepot-static.com/hdus/en_US/DTCCOMNEW/fetch/Category_Pages/Doors_and_Windows/Doors/Exterior_Doors/ExtDrs18-VisNav-Material-fiberglass-life.jpg', :class => 'mk-image-secundaria') %>
  					</div>
  				</div>
  			</div>
  			<div class="medium-8 cell">
  				<h3 class="mk-product-nom"><%= @producte.nom %></h3>
  				<div class="grid-x grid-margin-x">
  					<div class="medium-4 cell">
  						<span class="titol-camp-producte">Data de publicació</span><br/>
  						<span class="text-camp-producte">Febrer 2019</span>
  					</div>
  					<div class="medium-8 cell">
  						<span class="titol-camp-producte">Categoria</span><br/>
  						<span class="text-camp-producte">Portes</span>
  					</div>
  				</div>
  				<hr/>
  				<div class="grid-x grid-margin-x">
  					<div class="medium-12 cell">
  						<span class="titol-camp-producte">Descripció</span><br/>
  						<p class="text-camp-producte"><%= @producte.descripcio %></p>
  					</div>
  				</div>
  				<hr/>
  				<div class="grid-x grid-margin-x">
  					<div class="medium-8 cell">
  						<span class="titol-camp-producte">Localització</span><br/>
  						<span class="text-camp-producte"><%= @producte.adreca %>, <%= @producte.municipi %></span>
  					</div>
  					<div class="medium-4 cell">

  					</div>
  				</div>
  				<br/>
  				<hr class="hr-no-margin"/>
  				<div class="grid-x grid-margin-x">
  					<div class="small-4 cell">
  						<div class="mk-preu-container">
  							<span class="titol-camp-producte">Preu </span>
  							<span class="preu-producte"><%= @producte.preu %> €</span>
  						</div>
  					</div>
  					<div class="small-8 cell">
  						<div class="boto-enviar-missatge">
  							<div class="icona-dialeg">
  								<%= image_tag "https://dcyqocdz7x3wj.cloudfront.net/imatges/icon_dialeg.png", class: "img-icona-dialeg" %>
  							</div>
  							<div class="text-enviar-missatge">
  								Enviar missatge
  							</div>
  						</div>
  					</div>
  				</div>
  				<hr class="hr-no-margin"/>
  				<div class="grid-x grid-margin-x">
  					<div class="medium-12 cell">
  						<%= link_to marketcons_venedor_path(user_id: @producte.user_id), class:"mk-venedor-link" do %>
	  						<div class="mk-product-imatge-perfil-container">
		  						<% if @mk_user.mk_image_user.attached? %>
				  					<%= image_tag @mk_user.mk_image_user, class: "mk-imatge-perfil-producte" %>
				  				<% end %>
				  			</div>
				  			<div class="mk-product-text-perfil-container">
				  				<span class="titol-camp-producte">Publicat per</span><br/>
	  							<span class="text-camp-producte"><%= @producte.user.first_name %> <%= @producte.user.last_name %></span>
				  			</div>
				  		<% end %>
  					</div>
  				</div>
  			</div>
  		</div>
  	</div>
	</div>
</div>