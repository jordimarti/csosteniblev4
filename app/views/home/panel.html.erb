<div class="container">
  <div class="grid-x grid-margin-x">
    <div class="medium-12 cell">
      <div class="main-title-container">
        <span class="main-title"><%= t('.panell') %></span>
      </div>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <% if current_user.role == 'editor' %>
      <div class="medium-4 large-3 cell">
        <%= link_to noticies_llistat_path do %>
          <div class="panell-control-item">
            <%= image_tag("https://s3-eu-west-1.amazonaws.com/csosteniblev4/imatges/reunio_verificadors_1.jpg", class: 'imatge-item-panell-control') %>
            <div class="text-item-panell-control">
              <h3 class="panell-control-item-title">Notícies</h3>
              <p>Administra les notícies existents o crea'n una de nova</p>
            </div> 
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="medium-4 large-3 cell">
      <%= link_to new_producte_path do %>
        <div class="panell-control-item">
          <%= image_tag("https://s3-eu-west-1.amazonaws.com/csosteniblev4/imatges/producte_fusta.jpg", class: 'imatge-item-panell-control') %>
          <div class="text-item-panell-control">
            <h3 class="panell-control-item-title">Productes</h3>
            <% if current_user.role == 'editor' %>
              <p>Administra els productes o crea'n un de nou</p>
            <% else %>
              <p>Introdueix un producte</p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="medium-4 large-3 cell">
      <div class="panell-control-item">
        <%= image_tag("https://s3-eu-west-1.amazonaws.com/csosteniblev4/imatges/cas12_max_2.jpg", class: 'imatge-item-panell-control') %>
        <div class="text-item-panell-control">
          <h3 class="panell-control-item-title">Casos pràctics</h3>
          <% if current_user.role == 'editor' %>
            <p>Administra els casos pràctics o crea'n un de nou</p>
          <% else %>
            <p>Crea un cas pràctic</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="medium-4 large-3 cell">
      <%= link_to producte_dapcons_usuaris_path do %>
        <div class="panell-control-item">
          <%= image_tag("https://s3-eu-west-1.amazonaws.com/csosteniblev4/imatges/taula_dades3.jpg", class: 'imatge-item-panell-control') %>
          <div class="text-item-panell-control">
            <h3 class="panell-control-item-title"><%= t('.declaracions') %></h3>
            <p><%= t('.text_declaracions') %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="medium-3 cell">
      
    </div>
  </div>
</div>