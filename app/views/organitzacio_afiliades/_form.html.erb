
<%= simple_form_for(@organitzacio_afiliada) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :numero_membre %>
    <%= f.input :nom %>
    <%= f.input :dades %>
    <%= f.input :link_iso %>
    <%= f.input :tipus, collection: ['Empresa', 'Entitat'] %>
    <%= f.input :imatge_organitzacio, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
