<div class="container">
  <div class="grid-x">
    <div class="medium-12 cell">
      <div class="main-title-container noticies-main-title-container">
        <span class="main-title"><%= t('.change_password_title') %></span>
      </div>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="large-4 medium-6 cell">
    	<div class="login-formulari-container">
    		<p><%= t('.change_password_text1') %></p>
    		<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  				<%= f.error_notification %>
				  <div class="form-inputs">
				    <%= f.input :email, required: true, autofocus: true %>
				  </div>

				  <div class="form-actions">
				    <%= f.button :submit, t('.send_instructions') %>
				  </div>
				<% end %>
    	</div>
      <div class="links-sessions">
        <div class="shared-links-crear-compte">
          <%= t('.change_password_text2') %> <%= link_to t('.create_account'), new_registration_path(resource_name) %>.
        </div>
      </div>
    </div>
    <div class="large-8 medium-6 cell">
      <div class="container-imatge-inici-sessio">
        <%= image_tag('https://dcyqocdz7x3wj.cloudfront.net/imatges/recupera_contrasenya2.jpg', :class => 'responsive-img imatge-inici-sessio') %>
      </div> 
    </div>
  </div>
</div>