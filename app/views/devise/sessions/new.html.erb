<div class="container">
  <div class="grid-x">
    <div class="medium-12 cell">
      <div class="main-title-container noticies-main-title-container">
        <span class="main-title"><%= t('.login_title') %></span>
      </div>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="large-4 medium-6 large-offset-4 medium-offset-3 cell">
    	<div class="login-formulari-container">
    		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				  <div class="form-inputs">
				    <%= f.input :email, required: false, autofocus: true %>
				    <%= f.input :password, required: false %>
				    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
				  </div>

				  <div class="form-actions">
				    <%= f.button :submit, t('.login_button') %>
				  </div>
				<% end %>
    	</div>
    </div>
  </div>
</div>