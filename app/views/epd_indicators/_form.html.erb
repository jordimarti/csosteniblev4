
<%= simple_form_for(@epd_indicator) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :epd_id %>
    <%= f.input :indicator %>
    <%= f.input :unit %>
    <%= f.input :a1_a3 %>
    <%= f.input :a4 %>
    <%= f.input :a5 %>
    <%= f.input :b1 %>
    <%= f.input :b2 %>
    <%= f.input :b3 %>
    <%= f.input :b4 %>
    <%= f.input :b5 %>
    <%= f.input :b6 %>
    <%= f.input :b7 %>
    <%= f.input :c1 %>
    <%= f.input :c2 %>
    <%= f.input :c3 %>
    <%= f.input :c4 %>
    <%= f.input :d %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
